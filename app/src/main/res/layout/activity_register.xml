<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_puncte"
    tools:context=".Register">

    <TextView
        android:id="@+id/regTitle"
        android:layout_width="239dp"
        android:layout_height="91dp"
        android:layout_centerHorizontal="true"

        android:layout_marginTop="30dp"
        android:layout_marginBottom="50dp"
        android:background="@drawable/rama"
        android:fontFamily="@font/typo_round_regular_demo"
        android:gravity="center"
        android:text="Register"
        android:textColor="@color/black"
        android:textSize="60sp" />

    <EditText
        android:id="@+id/etEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/regTitle"
        android:textColorHint="@color/roz"
        android:textColor="@color/roz"
        android:drawableLeft="@drawable/ic_baseline_alternate_email_24"
        android:drawablePadding="10dp"
        android:hint="Email adress"
        android:layout_margin="10dp"
        android:layout_centerHorizontal="true"
        android:padding="20dp"
        android:background="@drawable/edit_text"
        />

    <EditText
        android:id="@+id/etPassword"
        android:inputType="textPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/etEmail"
        android:textColorHint="@color/roz"
        android:textColor="@color/roz"
        android:drawableLeft="@drawable/ic_baseline_fingerprint_24"
        android:drawablePadding="10dp"
        android:hint="Password"
        android:layout_margin="10dp"
        android:layout_centerHorizontal="true"
        android:padding="20dp"
        android:background="@drawable/edit_text"
        />

    <EditText
        android:id="@+id/etConfirmPassword"
        android:inputType="textPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/etPassword"
        android:textColorHint="@color/roz"
        android:textColor="@color/roz"
        android:drawableLeft="@drawable/ic_baseline_fingerprint_24"
        android:drawablePadding="10dp"
        android:hint="Confirm Password"
        android:layout_margin="10dp"
        android:layout_centerHorizontal="true"
        android:padding="20dp"
        android:background="@drawable/edit_text"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/registerBtn"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_below="@id/etConfirmPassword"
        android:layout_centerHorizontal="true"
        android:text="Register"
        android:background="@drawable/button"
        android:textColor="@color/roz"
        />

</RelativeLayout>